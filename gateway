import express from 'express';
import jwt from 'jsonwebtoken';
import fetch from 'node-fetch';

const app = express();
const PORT = process.env.PORT || 8080;
const SERVICE_AUTH_SECRET = process.env.SERVICE_AUTH_SECRET;
const GO_SERVICE_URL = process.env.GO_SERVICE_URL; // e.g. https://deafauth-xyz.a.run.app

app.get('/api/deafauth', async (req, res) => {
  try {
    // 1. Create a short-lived JWT
    const token = jwt.sign(
      { service: 'gateway', timestamp: Date.now() },
      SERVICE_AUTH_SECRET,
      { expiresIn: '60s' }
    );

    // 2. Call the Go microservice securely
    const response = await fetch(`${GO_SERVICE_URL}/verify`, {
      headers: { Authorization: `Bearer ${token}` },
    });

    const data = await response.json();
    res.json({ from: 'gateway', goResponse: data });
  } catch (err) {
    console.error(err);
    res.status(500).json({ error: 'Gateway communication failed' });
  }
});

app.listen(PORT, () => console.log(`Gateway running on port ${PORT}`));
